@page
@model Tickets_Please.Pages.ManageShowsModel
@{
    ViewData["Title"] = "Manage Showings";
}

<div class="card">
    <div class="card-header">
        <h3>Manage Showings</h3>
    </div>
    <div class="card-body">
        @if (!Model.Showings.Any())
        {
            <h3 class="text-center">No Showings Available</h3>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Title</th>
                            <th>Venue</th>
                            <th>Tickets Remaining (Capacity)</th>
                            <th>Price (£)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var show in Model.Showings)
                        {
                            <tr>
                                <td>@show.Date</td>
                                <td>@show.Time</td>
                                <td>@show.Title</td>
                                <td>@show.Venue</td>
                                <td>@show.Capacity</td>
                                <td>£@show.Price</td>
                                <td>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="showing" value="@show.Id">
                                        <button type="submit" class="btn btn-danger" name="action" value="Cancel">Cancel</button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
    </div>
</div>