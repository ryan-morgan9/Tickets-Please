@page
@model Tickets_Please.Pages.ResultsModel
@{
    ViewData["Title"] = "Results";
}

<div class="card mt-4">
    <div class="card-header">
        <h3>Showings in @Model.City</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Title</th>
                    <th>Venue</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var show in Model.Showings)
                {
                    <tr>
                        <td>@show.Date</td>
                        <td>@show.Time</td>
                        <td>@show.Title</td>
                        <td>@show.Venue, @show.City</td>
                        <td>
                            <form method="post">
                                <input type="hidden" name="showing" value="@show.Id">
                                <button type="submit" class="btn btn-primary">Get Tickets</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>